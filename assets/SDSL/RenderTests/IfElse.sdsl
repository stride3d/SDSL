namespace Stride.Shaders.Tests;

shader IfElseTrue
{
    stream float4 ColorTarget : SV_Target0;

    void PSMain()
    {
        streams.ColorTarget = float4(0.0, 0.0, 0.0, 0.0);
        if (true)
            streams.ColorTarget = float4(1.0, 1.0, 1.0, 1.0);
        else
            streams.ColorTarget = float4(0.5, 0.5, 0.5, 0.5);
    }
}